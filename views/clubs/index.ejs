<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Clubs</h1>

    <% for (let club of clubs){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(club.images.length) {%>
                <img class="img-fluid" alt="" src="<%=club.images[0].url%>" crossorigin>
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dndaagszd/image/upload/v1669933706/Greece-Club/zkk4uzj5qo2v1jniiagi.jpg"
                    crossorigin>
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= club.title %> </h5>
                    <p class="card-text"><%= club.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= club.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/clubs/<%=club._id%>">View <%=club.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const clubs = { features: <%- JSON.stringify(clubs) %>}
</script>
<!-- //we include the clusterMpa.js here in order to display in index page the cluster Mapbox mode -->
<script src="/javascripts/clusterMap.js"></script>


